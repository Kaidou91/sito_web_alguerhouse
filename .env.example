# Database connection string for Prisma/PostgreSQL.
# Prisma CLI legge solo `.env` per default: copia questo file sia in `.env` che in `.env.local` e aggiorna i valori.
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/alguerhouse"

# NextAuth base URL and secret used for signing cookies/JWTs
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-strong-secret"

# Stripe credentials (only needed when enabling payments)
STRIPE_SECRET_KEY="sk_test_replace"
STRIPE_WEBHOOK_SECRET="whsec_replace"

# Email provider API key (e.g. Resend/SendGrid)
RESEND_KEY="re_replace"

# Google Analytics 4 measurement ID (e.g. G-XXXXXXXX)
GA_MEASUREMENT_ID="G-XXXXXXXX"
